---
import { Image } from "astro:assets";

const { title, description, desP2, desP3 } = Astro.props;
---

<section class="flex flex-col items-center justify-center pt-10">
  <Image
    src="/img/jaque-mate-del-amor.webp"
    alt="Img Jake"
    width={400}
    height={400}
    loading={"lazy"}
    class="w-96 h-96 rounded-lg shadow-lg transition-transform duration-300 hover:scale-105"
  />
  <div class="flex flex-col py-4 gap-3 px-2">
    <h2 class="text-3xl font-bold text-center text-gray-800">
      {title}
    </h2>
    <details
      class="w-full gap-3 bg-white border border-gray-200 rounded-md shadow-md"
    >
      <summary
        class="flex items-center justify-between px-4 py-2 text-gray-600 hover:text-gray-900 cursor-pointer text-center font-bold"
      >
        Como fue creada Jaque Mate del Amor ?
        <span class="ml-2">
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w.org/http://www.w.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 9l-7 7-7-7"></path>
          </svg>
        </span>
      </summary>
      <div class="flex-col gap-3 px-4 bg-white max-w-prose">
        <p class="text-gray-700 py-2">{description}</p>
        <p class="text-gray-700 py-2">{desP2}</p>
        <p class="text-gray-700 py-2">{desP3}</p>
      </div>
    </details>
  </div>
</section>
